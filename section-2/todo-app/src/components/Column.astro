---
import Task from './Task.astro';

interface Props {
    title: string;
    tasks: Array<{ title: string; description: string; status: number }>;
}

const { title, tasks } = Astro.props;
---

<div class="bg-gray-50 p-4 rounded-lg w-1/3">
    <h2 class="font-semibold mb-4">{title}</h2>
    <div class="space-y-2">
        {tasks.map((task) => (
        <Task title={task.title} description={task.description} status={task.status} />
        ))}
    </div>
    <button class="mt-4 px-4 py-2 bg-blue-500 text-white rounded">+ Add task</button>
</div>